{
  "compilerOptions": {
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "Node16",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "rootDir": ".",
    "baseUrl": ".",
    "isolatedModules": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    ".reports"
  ]
}
