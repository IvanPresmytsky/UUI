{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "rootDir": "../.",
    "baseUrl": ".",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    ".reports"
  ],
  "include": [
    "framework",
    "scripts",
    "tests",
    "playwright.config.ts",
    "../app/src/docs/_types/previewIds.ts"
  ]
}
